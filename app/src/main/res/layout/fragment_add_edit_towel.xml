<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:id="@+id/et_towel_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/field_towel_type"
            android:inputType="text"
            android:hint="@string/field_towel_type"
    />

    <EditText
            android:id="@+id/et_towel_amount"
            app:layout_constraintTop_toBottomOf="@id/et_towel_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/field_towel_amount"
            android:inputType="number"
            android:hint="@string/field_towel_amount"
    />

    <EditText
            android:id="@+id/et_towel_available"
            app:layout_constraintTop_toBottomOf="@id/et_towel_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/field_towel_available"
            android:inputType="number"
            android:hint="@string/field_towel_available"
    />

</androidx.constraintlayout.widget.ConstraintLayout>